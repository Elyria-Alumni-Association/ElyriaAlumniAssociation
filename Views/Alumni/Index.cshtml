@model IList<ElyriaAlumniAssociation.Models.Alumnus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Search Criteria (Filters Are Cumulative)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <form method="get" asp-action="Index">
            <td>
                
                    <p>
                        <input type="search" placeholder="First Name" name="FirstNameSearch" />
                    </p>
                    <p>
                        <input type="search" placeholder="Last Name" name="LastNameSearch" />
                    </p>
                    <p>
                        <input type="search" placeholder="Last Name at Graduation" name="LastNameAtGraduationSearch" />
                    </p>  
            </td>
            <td>
                <p>
                    <input type="search" placeholder="Email" name="EmailSearch" />
                </p>
                <p>
                    <input type="search" placeholder="Phone Number" name="PhoneNumberSearch" />
                </p>
                <p>
                    <input type="search" placeholder="School Attended" name="SchoolSearch" />
                </p>
            </td>
            <td>
                <p>
                    <input type="search" placeholder="Graduation Years Start" name="GraduationYearStartSearch" id="GraduationStart" />
                </p>
                <p>
                   <input type="search" placeholder="Graduation Years End" name="GraduationYearEndSearch" id="GraduationEnd"/>
                </p>
            </td>
            <tr>
                <td>
                <input type="submit" value="Apply Filters" />
                </td>
            <td>
                <a asp-action="Index" class="btn btn-primary">Clear Filters</a>
            </td>
            </tr>
            </form>
    </tbody>
</table>
<form asp-action="DeleteAlumni" asp-controller="Alumni" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="allcheck" id="selectAll" /> Select All
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Middle Initial
                </th>
                <th>
                    Last Name at Graduation
                </th>
                <th>
                    School
                </th>
                <th>
                    Graduation Year
                </th>

                <th>
                   Email Address
                </th>
                <th>
                    Phone Number
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model[i].Selected" value="true" type="checkbox" />
                        <input asp-for="@Model[i].Id" type="hidden"/>
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].MiddleInitial)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].LastNameAtGraduation)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].School)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].GraduationYear)
                    </td>

                    <td>
                        @Html.DisplayFor(model => Model[i].EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].PhoneNumber)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@Model[i].Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Delete Selected
        </button>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>Are you sure you want to delete the selected entries? They will be permanently deleted</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-warning">Delete Selected</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script>
             $(function (){
            $("#selectAll").click(function (){
                $("input[type=checkbox]").prop('checked', $(this).prop('checked'));
            });
            $("input[type=checkbox]").click(function () {
                if(!$(this).prop("checked")) {
                    $("#selectAll").prop("checked", false);
                }
            });
        })
    </script>
}
